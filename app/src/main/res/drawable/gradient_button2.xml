<?xml version="1.0" encoding="UTF-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true" >
        <shape>
            <solid
                android:color="#48d4a8" />
            <corners
                android:radius="50dp"/>
            <padding
                android:left="0dp"
                android:top="0dp"
                android:right="0dp"
                android:bottom="0dp" />
        </shape>
    </item>
    <item>
        <shape>
            <gradient
                android:gradientRadius="45"
                android:startColor="#217bd4"
                android:centerColor="#599bea"
                android:endColor="#48d4a8"
                android:angle="45"
                android:type="linear"/>
            <corners
                android:radius="50dp" />
            <padding
                android:left="0dp"
                android:top="0dp"
                android:right="0dp"
                android:bottom="0dp" />
        </shape>
    </item>
</selector>