<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_focused="false" android:state_pressed="false">
        <shape>
            <solid android:color="#c92e73"></solid>
            <corners android:radius="5dp"></corners>

            <stroke android:width="0.1dp" android:color="#ff008c"></stroke>
        </shape>
    </item>

    <item android:state_focused="true" android:state_pressed="true">
        <shape>
            <solid android:color="#b41469"></solid>
            <corners android:radius="5dp"></corners>
            <stroke android:width="0.1dp" android:color="#ff0090"></stroke>

        </shape>
    </item>

    <item android:state_focused="true" android:state_pressed="false">
        <shape>
            <solid android:color="#b4148f"></solid>
            <corners android:radius="5dp"></corners>
            <stroke android:width="0.1dp" android:color="#ff0088"></stroke>

        </shape>
    </item>
</selector>