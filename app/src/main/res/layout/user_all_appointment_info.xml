<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/gradient_user"
    android:clipToPadding="false">

        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:orientation="horizontal"
            android:gravity="center"
            android:clipToPadding="false">

            <TextView
                android:id="@+id/appointmentApproval"
                android:layout_width="90dp"
                android:layout_height="40dp"
                android:background="@drawable/gradient_approved"
                android:padding="10dp"
                android:textColor="@color/white"
                android:fontFamily="@font/lato_bold"
                android:textSize="15sp"
                android:elevation="15dp"
                android:text="Approved"/>

            <LinearLayout
                android:layout_weight="1.2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center|left"
                android:padding="10dp"
                android:orientation="vertical">

                    <TextView
                        android:id="@+id/appointmentDate"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="date"
                        android:textSize="13sp"
                        android:textColor="@color/white"/>


                    <TextView
                        android:layout_marginTop="5dp"
                        android:id="@+id/appointmentTime"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:textSize="13sp"
                        android:text="time"
                        android:textColor="@color/white"/>

            </LinearLayout>


            <LinearLayout
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:orientation="vertical"
                android:gravity="center|left">


                    <TextView
                        android:id="@+id/appointmentMethod"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="treatment Method"
                        android:layout_weight="1"
                        android:textSize="13sp"
                        android:textColor="@color/white"/>


                    <TextView
                        android:layout_marginTop="5dp"
                        android:id="@+id/appointmentBranch"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Branch"
                        android:textColor="@color/white"
                        android:textSize="13sp"
                        android:layout_gravity="center" />


            </LinearLayout>

        </LinearLayout>

</RelativeLayout>