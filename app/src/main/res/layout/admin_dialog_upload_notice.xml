<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="5dp"
    android:gravity="center">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="5dp"
        app:cardBackgroundColor="#f4f4f4"
        app:cardCornerRadius="15dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:text="Upload Offer"
                android:textColor="@color/black_effective"
                android:textSize="20sp"
                android:fontFamily="@font/lato_bold"/>

            <EditText
                android:id="@+id/offerTitleTv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="5dp"
                android:layout_marginRight="15dp"
                android:background="@drawable/editbox2"
                android:gravity="left"
                android:hint="Offer Title"
                android:paddingLeft="25dp"
                android:textSize="13sp"
                android:fontFamily="@font/lato_regular"/>

            <TextView
                android:id="@+id/imageUpload"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="5dp"
                android:layout_marginRight="15dp"
                android:background="@drawable/editbox1"
                android:clickable="true"
                android:drawableLeft="@drawable/upload_image"
                android:drawablePadding="15dp"
                android:gravity="left"
                android:hint="Tap to Select a Image"
                android:padding="10dp"
                android:textSize="13sp"
                android:fontFamily="@font/lato_regular"/>

            <TextView
                android:id="@+id/dateSet"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="5dp"
                android:layout_marginRight="15dp"
                android:layout_weight="1"
                android:background="@drawable/editbox1"
                android:drawableLeft="@drawable/calendar_icon"
                android:drawablePadding="15dp"
                android:padding="10dp"
                android:text="Validation Date"
                android:textSize="13sp"
                android:fontFamily="@font/lato_regular"/>

            <EditText
                android:id="@+id/offerDetailsTv"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:layout_below="@+id/issueBox"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="5dp"
                android:layout_marginRight="15dp"
                android:background="@drawable/editbox1"
                android:gravity="left"
                android:hint="Offer Details"
                android:inputType="textMultiLine"
                android:maxLines="8"
                android:paddingLeft="10dp"
                android:textSize="15sp"
                android:fontFamily="@font/lato_regular"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="10dp"
                android:background="@color/colorAccent" />

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/cancelButton"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginTop="5dp"
                        android:layout_weight="1"
                        android:background="@android:color/transparent"
                        android:fontFamily="@font/lato_regular"
                        android:text="Cancel"
                        android:textAllCaps="false"
                        android:textColor="@color/firebrick"
                        android:textSize="13sp" />

                    <View
                        android:layout_width="1dp"
                        android:layout_height="50dp"
                        android:layout_gravity="center"
                        android:background="@color/colorAccent" />

                    <Button
                        android:id="@+id/uploadButton"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginTop="5dp"
                        android:layout_weight="1"
                        android:background="@android:color/transparent"
                        android:fontFamily="@font/lato_regular"
                        android:text="Upload"
                        android:textAllCaps="false"
                        android:textColor="@color/indigo"
                        android:textSize="13sp" />

                </LinearLayout>

            </FrameLayout>

        </LinearLayout>

    </android.support.v7.widget.CardView>

</RelativeLayout>